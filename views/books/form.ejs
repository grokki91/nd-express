<form method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputTitle">Title</label>
        <input type="text" class="form-control" id="inputTitle" placeholder="title" value="<%= book.title %>">
      </div>
      <div class="form-group col-md-6">
        <label for="inputDescription">Description</label>
        <input type="text" class="form-control" id="inputDescription" placeholder="Description" value="<%= book.description %>">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAuthors">Authors</label>
      <input type="text" class="form-control" id="inputAuthors" placeholder="Authors" value="<%= book.authors %>">
    </div>
    <div class="form-group">
      <label for="inputFileCover">FileCover</label>
      <input type="text" class="form-control" id="inputFileCover" placeholder="FileCover" value="<%= book.fileCover %>">
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputFileName">FileName</label>
        <input type="text" class="form-control" id="inputFileName" value="<%= book.fileName %>">
      </div>
    <div class="form-group">
        <label for="exampleFormControlFile1">FileBook</label>
        <input type="file" class="form-control-file" id="exampleFormControlFile1" value="<%= book.fileBook %>">
    </div>
    </div>
    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck" value="<%= book.favorite %>">
        <label class="form-check-label" for="gridCheck">
            favorite
        </label>
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>