
<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <div class="text-right">
                    <span>Views: <%= counter %></span>
                </div>
                <span>Title: </span><p class="card-title text-uppercase"><%= book.title %></p>
                <span>Description: </span><p class="card-title text-uppercase"><%= book.description %></p>
                <span>Authors: </span><p class="card-title text-uppercase"><%= book.authors %></p>
                <span>FileCover: </span><p class="card-title text-uppercase"><%= book.fileCover %></p>
                <span>FileName: </span><p class="card-title text-uppercase"><%= book.fileName %></p>
                <span>FileBook: </span><p class="card-title text-uppercase"><%= book.fileBook %></p>
                <span>Favorite: </span>
                    <% if (book.favorite) { %>
                        <p class="card-title text-uppercase">True</p>
                    <% } else { %>
                        <p class="card-title text-uppercase">False</p>
                    <% } %>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label for="InputName">Username</label>
            <input type="text" class="form-control user-name" id="InputName" aria-describedby="textHelp" placeholder="Enter username">
          </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Comment:</label>
            <textarea class="form-control text-message" id="exampleFormControlTextarea1" rows="3"></textarea>
            <button type="submit" id="send" class="btn btn-primary btn-message mt-2">Send</button>
        </div>
        <div id="list" class="list-group">

        </div>
    </div>
</div>

<%- include('../port/layout-end') %>
